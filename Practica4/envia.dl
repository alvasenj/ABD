% icono_azul(Usuario)
 icono_azul(Origen) :-
 	group_by(
 		envia(Origen, 27, NumPersonas),
 		[Origen],
 		count(NumPersonas) >= 10
 		).
 
% triple_arco_iris(X) (Usuario)	FUNCIÓN PRINCIPAL		
triple_arco_iris(X) :-
 	group_by(
 		envia(X, 14, NumPersonas),
 		reenvio_doble(NumPersonas),
 		[X],
 		count(NumPersonas) >= 10
 		).
		
% reenvio_doble(Origen)	FUNCIÓN AUXILIAR DONDE SACAMOS AQUELLOS DESTINATARIOS QUE HAN REENVIADO EL MENSAJE
 reenvio_doble(Origen) :-
 	group_by(
 		envia(Origen, 14, NumPersonas),
 		[Origen],
 		count(NumPersonas) >= 3
 		).


% fortuna_usuario(Usuario, CantidadDinero) FUNCIÓN PRINCIPAL
fortuna_usuario(Origen, Cantidad) :-
 	group_by(
 		rel_aux(Origen, Destino),
 		[Origen],
 		Cantidad is count(Destino)*245
 		).  
% rel_aux(X,Y)	FUNCIÓN AUXILIAR QUE SACA TODOS AQUELLOS USUARIOS QUE HAN ENVIADO EL MENSAJE 19 
rel_aux(X,Y) :- envia(X,19,Y).
rel_aux(X,Y) :- envia(X,19,Z),envia(Z,19,Y).
rel_aux(X,Y) :- envia(X,19,A),envia(A,19,Z),envia(Z,19,Y), X \= Y.
	
 	
 
